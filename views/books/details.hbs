<section class="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br> {{title}}</h2>
            <h3>Author: {{author}}</h3>
            <h3>Stars: {{stars}}</h3>
            <h3>Genre: {{genre}}</h3>
            <h3>Review: {{bookReview}}</h3>

            {{#if user}}
            <div class="buttons">
                {{#if isOwner}}
                <!-- Only for registered user and author of the review -->
                <a href="/edit/{{_id}}" class="btn-edit">Edit</a>
                <a href="/delete/{{_id}}" class="btn-delete">Delete</a>
                {{else if user}}
                    {{#if isWished}}
                <!-- logged in user who has already wished the book-->
                <p class="wish-pub">You already added the book to your wish list</p>
                    {{else}}
                <!-- logged in user who has not yet wished the book-->
                <a href="/wish/{{_id}}" class="btn-wish">Wish to read</a>
                {{/if}}
                {{/if}}
            </div>
            {{/if}}
        </article>

        <article class="details-card-image">
            <img src="{{image}}">
        </article>

    </article>
</section>