<section class="create-form-container">

    <form action="/products/create" method="POST">
        <h3>Create Book Review</h3>
        <label>Title</label>
        <input type="text" name="title" class="box" id="" value="{{x.title}}">
        <label>Author</label>
        <input type="text" name="author" class="box" id="" value="{{x.author}}">
        <label>Genre</label>
        <input type="text" name="genre" class="box" id="" value="{{x.genre}}">
        <label>Stars</label>
        <input type="number" name="stars" class="box" id="" value="{{x.stars}}">
        <label>Image</label>
        <input type="text" name="image" class="box" id="" value="{{x.image}}">
        <label>Review</label>
        <textarea class="box" name="bookReview">{{x.bookReview}}</textarea>
        <input type="submit" value="Create" class="btn">
    </form>
</section>