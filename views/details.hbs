<section class="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br> {{products.title}}</h2>
            <h3>Author: {{products.author}}</h3>
            <h3>Stars: {{products.stars}}</h3>
            <h3>Genre: {{products.genre}}</h3>
            <h3>Review: {{products.bookReview}}</h3>

            {{#if user}}
            <div class="buttons">
                {{#if products.isOwner}}
                <a href="/edit/{{products._id}}" class="btn-edit">Edit</a>
                <a href="#" class="btn-delete">Delete</a>
                {{/if}}
               {{#if products.isWished}}
                <a href="#" class="btn-wish">Wish to read</a>
                {{else}}
                <p class="wish-pub">You already added the book to your wish list</p>
                {{/if}}
            </div>
            {{/if}}
        </article>

        <article class="details-card-image">
            <img src="{{products.image}}">
        </article>

    </article>
</section>